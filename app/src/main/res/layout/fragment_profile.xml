<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/tv_Profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:text="@string/hello"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_change_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/change_password_button"
        app:layout_constraintEnd_toEndOf="@+id/tv_Profile"
        app:layout_constraintStart_toStartOf="@+id/tv_Profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_Profile" />

    <Button
        android:id="@+id/bt_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/log_out_button"
        app:layout_constraintEnd_toEndOf="@+id/bt_change_password"
        app:layout_constraintStart_toStartOf="@+id/bt_change_password"
        app:layout_constraintTop_toBottomOf="@+id/bt_change_password" />

</androidx.constraintlayout.widget.ConstraintLayout>